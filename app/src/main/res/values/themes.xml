<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.WeatherApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple</item>

        <item name="android:windowBackground">@color/purple</item>
        <item name="cardViewStyle">@style/CardViewStyle</item>

        <!-- Text Colors -->
        <item name="android:textColor">?attr/colorPrimary</item>

        <!-- Text Styles -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Weather.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Weather.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Weather.Headline3</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Weather.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Weather.Body2</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="textInputStyle">@style/TextInputLayoutStyle</item>
    </style>

    <style name="Theme.WeatherApp" parent="Base.Theme.WeatherApp" />

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation
        duration. -->
        <item name="windowSplashScreenBackground">#272350</item>

        <!-- Use windowSplashScreenAnimatedIcon to add a drawable or an animated
             drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_weather_app</item>

        <!-- Set the theme of the Activity that directly follows your splash
        screen. This is required. -->
        <item name="postSplashScreenTheme">@style/Theme.WeatherApp</item>
    </style>

</resources>