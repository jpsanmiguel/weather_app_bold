        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/TextInputLayout</item>
        <item name="boxStrokeColor">@android:color/white</item>
        <item name="hintTextColor">@android:color/darker_gray</item>
